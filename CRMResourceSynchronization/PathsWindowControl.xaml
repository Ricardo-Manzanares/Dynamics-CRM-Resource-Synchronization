<UserControl x:Class="CRMResourceSynchronization.PathsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             MinWidth="373"      
             MinHeight="373"
             mc:Ignorable="d"
             Name="MyToolWindow">
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />            
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <Grid Background="Purple">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="INFO" Text="" Padding="10" Grid.Column="0" Foreground="White" ></TextBlock>
                <RadioButton x:Name="INFOPATHTrue" Visibility="Hidden" Grid.Column="1" Foreground="White" VerticalAlignment="Center" GroupName="PathOfProject" Click="INFOPATH_Click">True</RadioButton>
                <RadioButton x:Name="INFOPATHFalse" Visibility="Hidden" Grid.Column="1" Foreground="White" VerticalAlignment="Center" Margin="50,0,0,0" GroupName="PathOfProject" Click="INFOPATH_Click">False</RadioButton>
            </Grid>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Margin="10">
            <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Path of Web page (HTML) .htm, .html" Grid.Row="0" Margin="0, 5, 10, 0" ></TextBlock>
                <TextBox x:Name="PathHtml" Grid.Row="1" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Stylesheet (CSS) .css" Grid.Row="2" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathCSS" Grid.Row="3" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Script (JScript) .js" Grid.Row="4" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathJS" Grid.Row="5" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Data (XML) .xml" Grid.Row="6" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathXML" Grid.Row="7" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Image (PNG) .png" Grid.Row="8" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathPNG" Grid.Row="9" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Image (JPG) .jpg" Grid.Row="10" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathJPG" Grid.Row="11" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Image (GIF) .gif" Grid.Row="12" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathGIF" Grid.Row="13" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Silverlight (XAP) .xap" Grid.Row="14" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathXAP" Grid.Row="15" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Stylesheet (XSL) .xsl, xslt" Grid.Row="16" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathXSL" Grid.Row="17" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Image (ICO) .ico" Grid.Row="18" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathICO" Grid.Row="19" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Vector format (SVG) .svg" Grid.Row="20" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathSVG" Grid.Row="21" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>
                <TextBlock Text="Path of Chain (RESX) .resx" Grid.Row="22" Margin="0, 0, 10, 0" ></TextBlock>
                <TextBox x:Name="PathRESX" Grid.Row="23" TextWrapping="Wrap" Margin="0, 5, 10, 10" BorderBrush="Transparent"/>                
            </Grid>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Background="Transparent" Margin="10" ToolTip="Close window" x:Name="Cancel" BorderBrush="Transparent" Height="25" Width="25" BorderThickness="0" Cursor="Hand" Click="Cancel_Click" >
                    <Image>
                        <Image.Source>
                            <DrawingImage>
                                <DrawingImage.Drawing>
